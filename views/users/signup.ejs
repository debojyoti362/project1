  <% layout("/layouts/boilerplate") %>

<div class="row mt-3">
 <div class="col-6 offset-5">
  <h2>SignUp</h2>
 </div>
</div>

<div class="row mt-3">
 <div class="col-6 offset-3">
     <form action="/signup" method="POST" class="needs-validation" novalidate>
        <lable for="username" class="form-label">Username</lable>
        <input 
        name="username" 
        id="username"
        type="text" 
        class="form-control"
        required>
        <div class="valid-feedback">Username is Good!</div>

        <lable for="email" class="form-label">Email</lable>
        <input 
        name="email" 
        id="email"
        type="text" 
        class="form-control"
        required>
        <div class="valid-feedback"></div>

        <lable for="password" class="form-label">password</lable>
        <input 
        name="password" 
        id="password"
        type="password" 
        class="form-control"
        required>
        <div class="valid-feedback">password given!</div>
        <br>
        <br>
        <button class="btn btn-outline-success">SignUp</button>
        </form>
 </div>
</div>  
